<div id="<%= dom_id category %>">

  <p>
    <strong>Name:</strong>
     <%= link_to category.name, category_deals_path(category) %> |
  </p>

  <p>
    <strong>Icon:</strong>
    <%= category.icon %>
  </p>

  <p>
    <strong>Total amount Spent:</strong>
    <%= category.deals.sum(:amount) %>
  </p>

</div>
