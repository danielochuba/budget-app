<%= button_to "<", categories_path, method: :get %>

<h1>Deals</h1>
<p> Total amount spent: <%= @total_amount_spent %> </p>

<div id="deals">
  <% @deals.each do |deal| %>
    <%= render deal %>
    <p>
      <%= link_to "Show this deal", category_deal_path(id: deal.id) %>
    </p>
  <% end %>
</div>

